# Application
APP_ENV=development
APP_NAME="Travel API"
SERVER_PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=
DB_SSLMODE=disable
DB_TIMEZONE=Asia/Jakarta
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=50
DB_CONN_MAX_LIFETIME=1h

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication (JWT) - Ganti dengan secret yang sangat acak dan panjang
JWT_SECRET="ganti-dengan-kunci-rahasia-yang-sangat-aman-dan-panjang"
JWT_EXPIRATION_MINUTES=1440 # 24 jam

# CORS - Pisahkan dengan koma jika lebih dari satu
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# External - Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_SENDER_EMAIL=
